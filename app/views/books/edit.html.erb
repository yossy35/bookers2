<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title, class:"form-control book_title" %><br>
          <p>Opinion</p>
          <%= f.text_area :body, class:"form-control book_title" %><br>
          <%= f.submit'update book', class:"btn btn-success" %><br><br>
        <% end %>

        <%= link_to "show", book_path(@book.id) %> |
        <%= link_to "back", books_path %>
      </div>
    </div>
  </div>
</main>