<h2>User info</h2>

  <%= image_tag @user.get_profile_image(100,100) %>
    
  <table border="1">
    <tr>
      <th>name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
    
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<!-- 新規投稿 -->
<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %> 

<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(100,100) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
